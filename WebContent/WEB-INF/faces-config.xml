<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
    http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
    version="2.0">
	
	<application>
		<locale-config>
			<default-locale>pt_BR</default-locale>
			<supported-locale>pt_BR</supported-locale>
			<supported-locale>en_US</supported-locale>
		</locale-config>
		
		<resource-bundle>
       		<base-name>mensagens.idioma.linguagem</base-name>
       		<var>mensagens</var>
  		</resource-bundle>
	</application>
	
	<converter>
    	<converter-id>converter.CPF</converter-id>
    	<converter-class>modulos.sisEducar.converter.ConverteCPF</converter-class>
	</converter>
 	<converter>
    	<converter-id>converter.DATA</converter-id>
    	<converter-class>modulos.sisEducar.converter.ConverteData</converter-class>
	</converter>
 	
 	
 	<validator>
    	<validator-id>validar.CpfValidator</validator-id>
    	<validator-class>modulos.sisEducar.validator.ValidaCPF</validator-class>
	</validator>
</faces-config>