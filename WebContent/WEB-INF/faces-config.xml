<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
    version="2.2">
	
	<application>
		<locale-config>
			<default-locale>pt_BR</default-locale>
			<supported-locale>pt_BR</supported-locale>
			<supported-locale>en_US</supported-locale>
		</locale-config>
		
		<resource-bundle>
       		<base-name>idioma.linguagem</base-name>
       		<var>mensagens</var>
  		</resource-bundle>
	</application>
	
	<converter>
    	<converter-id>converter.CEP</converter-id>
    	<converter-class>sisEdcuar.converter.ConverteCEP</converter-class>
	</converter>
	<converter>
    	<converter-id>converter.CPF</converter-id>
    	<converter-class>sisEdcuar.converter.ConverteCPF</converter-class>
	</converter>
 	<converter>
    	<converter-id>converter.CNPJ</converter-id>
    	<converter-class>sisEdcuar.converter.ConverteCNPJ</converter-class>
	</converter>
 	<converter>
    	<converter-id>converter.DATA</converter-id>
    	<converter-class>sisEdcuar.converter.ConverteData</converter-class>
	</converter>
 	<converter>
    	<converter-id>converter.RG</converter-id>
    	<converter-class>sisEdcuar.converter.ConverteRG</converter-class>
	</converter>
	<converter>
    	<converter-id>converter.TELCELULAR</converter-id>
    	<converter-class>sisEdcuar.converter.ConverteTelCelular</converter-class>
	</converter>
	<converter>
    	<converter-id>converter.TELRESIDENCIAL</converter-id>
    	<converter-class>sisEdcuar.converter.ConverteTelResidencial</converter-class>
	</converter>
 	
 	<validator>
    	<validator-id>validar.CpfValidator</validator-id>
    	<validator-class>sisEdcuar.validador.ValidaCPF</validator-class>
	</validator>
	<validator>
    	<validator-id>validar.CnpjValidator</validator-id>
    	<validator-class>sisEdcuar.validador.ValidaCNPJ</validator-class>
	</validator>
</faces-config>
