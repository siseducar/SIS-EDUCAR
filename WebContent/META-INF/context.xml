<?xml version="1.0" encoding="UTF-8"?>
<Context path="/exemplo" docBase="exemplo">
 
<!-- datasource -->
    <Resource name="jdbc/coruja"
              auth="Container"
              scope="Shareable"
              type="javax.sql.DataSource"
              username="postgres"
              password="postgres"
              driverClassName="org.postgresql.Driver"
              url="jdbc:postgresql://localhost:5432/coruja"
              maxActive="1000"
              maxIdle="30"
              maxWait="10000"/>
</Context>